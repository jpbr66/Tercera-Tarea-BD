@model WebApplication1.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



<form asp-action="Ingresar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="content-center">
        <h5 class="display-4">Login</h5>
        <input class="controls" type="text" name="Nombre" value="" placeholder="Usuario" id="name" required/><br />
        @*<span asp-validation-for="Nombre" class="text-danger"></span>*@
        <input class="controls" style="margin-top:15px" id="pass" type="password" name="clave" value="" placeholder="Clave" required /><br />
        @*<span asp-validation-for="Clave" class="text-danger"></span>*@
        <button class="buttons" id="Ingresar">Ingresar</button>
        <span class="text-danger">@ViewData["CI"]</span>
    </div>
</form>


