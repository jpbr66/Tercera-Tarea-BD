@model System.Data.DataTable

@{
    ViewData["Title"] = "Pagar";
    Layout = "~/Views/Shared/_LayoutNoAdministrador.cshtml";
}

<h1>Pagar</h1>

<p>Se pagará la factura más antigua</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Pagar">
            <div class="form-group">
                <label class="control-label">Tipo de Pago</label>
                <select name="tipoPago" class="form-control" style="inline-size:auto; display:inline" required>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <option>@Model.Rows[i][0].ToString()</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Pagar" class="btn btn-primary" />
            </div>
            <span class="text-danger">@ViewData["ErrorData"]</span>
        </form>
    </div>
</div>

<div>
    <a asp-action="FacturasPendientes">Back to List</a>
</div>

