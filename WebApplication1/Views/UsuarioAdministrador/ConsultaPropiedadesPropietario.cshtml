@model System.Data.DataTable
@{
    ViewData["Title"] = "ConsultaPropiedadesPropietario";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h1>Consulta Propiedades de un Propietario</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                <p style="height:5px">Numero de finca</p>
            </th>
            <th>
                <p style="height:5px">Valor Fiscal</p>
            </th>
            <th>
                <p style="height:5px">Area</p>
            </th>
            <th>
                <p style="height:5px">Fecha registro</p>
            </th>
            <th>
                <p style="height:5px">Tipo Zona</p>
            </th>
            <th>
                <p style="height:5px">Tipo Terreno</p>
            </th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            if (Model.Rows[i][0].ToString() != "0")
            {
                int id = (int)Model.Rows[i][0];
                <tr>
                    <td>
                        <p style="height:5px">@Model.Rows[i][1].ToString()</p>
                    </td>
                    <td>
                        <p style="height:5px">@Model.Rows[i][2].ToString()</p>
                    </td>
                    <td>
                        <p style="height:5px">@Model.Rows[i][3].ToString()</p>
                    </td>
                    <td>
                        <p style="height:5px">@Model.Rows[i][4].ToString()</p>
                    </td>
                    <td>
                        <p style="height:5px">@Model.Rows[i][5].ToString()</p>
                    </td>
                    <td>
                        <p style="height:5px">@Model.Rows[i][6].ToString()</p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

