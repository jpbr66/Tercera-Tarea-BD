@model System.Data.DataTable

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Model.Rows[0][0].ToString()
        </dd>
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @Model.Rows[0][1].ToString()
        </dd>
        <dt class="col-sm-2">
            Tipo de Usuario
        </dt>
        <dd class="col-sm-10">
            @Model.Rows[0][2].ToString()
        </dd>
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Rows[0][3].ToString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Usuario">Back to List</a>
</div>
