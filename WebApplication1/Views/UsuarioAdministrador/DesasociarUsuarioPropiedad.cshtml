@model System.Data.DataTable

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h1>Desasociar</h1>

<h3>¿Seguro que los desea desasociar?</h3>
<div>
    <h4>Usuario - Propiedad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Rows[0][0].ToString()
        </dd>
        <dt class="col-sm-2">
            Numero de Finca
        </dt>
        <dd class="col-sm-10">
            @Model.Rows[0][1].ToString()
        </dd>
    </dl>
    
    <form asp-action="DesasociarUsuarioPropiedad">
        <input type="submit" value="Desasociar" class="btn btn-danger" /> |
        <a asp-action="UsuarioPropiedad">Back to List</a>
    </form>
</div>
